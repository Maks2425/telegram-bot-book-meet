# Telegram Bot Token
# Get your token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Google Calendar Configuration
# Option 1: Service Account (recommended for bots)
# Download service account JSON from Google Cloud Console
GOOGLE_SERVICE_ACCOUNT_FILE=path/to/service-account-key.json

# Calendar ID (use 'primary' for primary calendar)
GOOGLE_CALENDAR_ID=primary

# Calendar Working Hours Configuration (optional)
# Timezone for calendar events
CALENDAR_TIMEZONE=Europe/Stockholm

# Work start time (format: HH:MM)
CALENDAR_WORK_START=08:00

# Work end time (format: HH:MM)
CALENDAR_WORK_END=18:00

# Time slot interval in hours (e.g., 2 = slots every 2 hours: 8:00, 10:00, 12:00, etc.)
CALENDAR_SLOT_INTERVAL_HOURS=2

# Cleaning appointment duration in hours
CALENDAR_CLEANING_DURATION_HOURS=2
